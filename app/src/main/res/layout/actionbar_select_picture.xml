<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#333333"
    android:layout_height="?android:attr/actionBarSize">
    <ImageView
        android:id="@+id/actionbar_close"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/close"
        android:layout_width="24dp"
        android:layout_height="24dp"/>

    <LinearLayout
        android:id="@+id/actionbar_type_layout"
        android:background="@drawable/picture_type_bound"
        android:orientation="horizontal"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/actionbar_close"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="30dp">
        <TextView
            android:layout_marginStart="10dp"
            android:id="@+id/actionbar_type_tv"
            android:text="所有图片"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="25dp"/>
        <ImageView
            android:layout_marginEnd="10dp"
            android:layout_marginStart="4dp"
            android:id="@+id/actionbar_type_image"
            android:src="@drawable/picture_type"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/actionbar_finish"
        android:background="@drawable/bound"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="完成(0/9)"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="38dp"/>
</android.support.constraint.ConstraintLayout>