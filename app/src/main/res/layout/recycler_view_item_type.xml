<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/layout_type_item"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#333333"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="84dp">
    <ImageView
        android:scaleType="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_launcher_background"
        android:id="@+id/image_type_item"
        android:layout_width="70dp"
        android:layout_height="70dp"/>
    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_type_item"
        android:layout_marginStart="6dp"
        android:text="所有图片"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:id="@+id/tv_type_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_type_item"
        android:layout_marginStart="6dp"
        android:text="(118)"
        android:textSize="18sp"
        android:textColor="#7C7777"
        android:id="@+id/tv_type_item2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_gravity="top"
        android:id="@+id/image_choice_type"
        android:src="@drawable/choiced_type"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
</android.support.constraint.ConstraintLayout>